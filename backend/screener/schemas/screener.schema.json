{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://terra-rara.local/schemas/screener.schema.json",
    "title": "ScreenerOutput",
    "description": "Output contract for Feature Screener",
    "type": "object",
    "required": [
        "meta",
        "target",
        "analysis_parameters",
        "candidates",
        "fingerprint"
    ],
    "properties": {
        "meta": {
            "type": "object",
            "required": [
                "generated_at",
                "run_id",
                "config_hash",
                "lib_versions",
                "universe_version"
            ],
            "properties": {
                "generated_at": {
                    "type": "string",
                    "format": "date-time"
                },
                "run_id": {
                    "type": "string",
                    "pattern": "^scr-[0-9]{8}-[a-z0-9]+$"
                },
                "git_commit": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "config_hash": {
                    "type": "string"
                },
                "lib_versions": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "universe_version": {
                    "type": "string"
                },
                "universe_fingerprint": {
                    "type": "string"
                }
            }
        },
        "target": {
            "type": "object",
            "required": [
                "ticker"
            ],
            "properties": {
                "ticker": {
                    "type": "string"
                },
                "first_date": {
                    "type": "string",
                    "format": "date"
                },
                "last_date": {
                    "type": "string",
                    "format": "date"
                },
                "total_weeks": {
                    "type": "integer"
                }
            }
        },
        "analysis_parameters": {
            "type": "object",
            "properties": {
                "is_start": {
                    "type": "string",
                    "format": "date"
                },
                "is_end": {
                    "type": "string",
                    "format": "date"
                },
                "oos_start": {
                    "type": "string",
                    "format": "date"
                },
                "oos_end": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "format": "date"
                },
                "rolling_window_weeks": {
                    "type": "integer"
                },
                "lead_lag_max_periods": {
                    "type": "integer"
                },
                "sign_flip_epsilon": {
                    "type": "number"
                },
                "min_is_corr_threshold": {
                    "type": "number"
                },
                "min_obs": {
                    "type": "integer"
                },
                "controls": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "candidates": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/candidate"
            }
        },
        "excluded": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "ticker",
                    "reason"
                ],
                "properties": {
                    "ticker": {
                        "type": "string"
                    },
                    "reason": {
                        "type": "string"
                    },
                    "is_pearson": {
                        "type": "number"
                    },
                    "details": {
                        "type": "string"
                    }
                }
            }
        },
        "artifacts": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "sha256"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "sha256": {
                        "type": "string"
                    },
                    "path": {
                        "type": "string"
                    }
                }
            }
        },
        "fingerprint": {
            "type": "string"
        }
    },
    "$defs": {
        "periodMetrics": {
            "type": "object",
            "properties": {
                "pearson": {
                    "type": [
                        "number",
                        "null"
                    ]
                },
                "spearman": {
                    "type": [
                        "number",
                        "null"
                    ]
                },
                "rolling_corr_mean": {
                    "type": [
                        "number",
                        "null"
                    ]
                },
                "rolling_corr_std": {
                    "type": [
                        "number",
                        "null"
                    ]
                },
                "sign_flip_count": {
                    "type": [
                        "integer",
                        "null"
                    ]
                },
                "best_lead_lag": {
                    "type": [
                        "integer",
                        "null"
                    ]
                },
                "best_lead_lag_corr": {
                    "type": [
                        "number",
                        "null"
                    ]
                },
                "frozen_lag": {
                    "type": [
                        "integer",
                        "null"
                    ]
                },
                "lag_corr_at_frozen": {
                    "type": [
                        "number",
                        "null"
                    ]
                },
                "partial_corr": {
                    "type": [
                        "number",
                        "null"
                    ]
                },
                "passed_retention": {
                    "type": [
                        "boolean",
                        "null"
                    ]
                },
                "n_obs": {
                    "type": [
                        "integer",
                        "null"
                    ]
                },
                "first_date": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "last_date": {
                    "type": [
                        "string",
                        "null"
                    ]
                }
            }
        },
        "candidate": {
            "type": "object",
            "required": [
                "ticker",
                "pairwise_obs",
                "is",
                "decision"
            ],
            "properties": {
                "ticker": {
                    "type": "string"
                },
                "category": {
                    "type": "string"
                },
                "pairwise_obs": {
                    "type": "integer"
                },
                "is": {
                    "$ref": "#/$defs/periodMetrics"
                },
                "oos": {
                    "$ref": "#/$defs/periodMetrics"
                },
                "overrides_applied": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "decision": {
                    "type": "object",
                    "properties": {
                        "rank": {
                            "type": [
                                "integer",
                                "null"
                            ]
                        },
                        "score_composite": {
                            "type": [
                                "number",
                                "null"
                            ]
                        },
                        "include_in_model": {
                            "type": "boolean"
                        },
                        "notes": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}